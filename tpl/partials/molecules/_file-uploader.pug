#file-uploader
	.container
		.title
			h4 File Uploader
		.row
			.col-md-5.col-sm-8
				h4
					small Regular Image
				.fileinput.fileinput-new.text-center(data-provides='fileinput')
					.fileinput-new.thumbnail.img-raised
						img(src='assets/img/image_placeholder.jpg' alt='...')
					.fileinput-preview.fileinput-exists.thumbnail.img-raised
					div
						span.btn.btn-raised.btn-round.btn-default.btn-file
							span.fileinput-new Select image
							span.fileinput-exists Change
							input(type='file' name='...')
						a.btn.btn-danger.btn-round.fileinput-exists(href='#pablo' data-dismiss='fileinput')
							i.now-ui-icons.ui-1_simple-remove
							|  Remove
			.col-md-3.col-sm-4
				h4
					small Avatar
				.fileinput.fileinput-new.text-center(data-provides='fileinput')
					.fileinput-new.thumbnail.img-circle.img-raised
						img(src='assets/img/placeholder.jpg' alt='...')
					.fileinput-preview.fileinput-exists.thumbnail.img-circle.img-raised
					div
						span.btn.btn-raised.btn-round.btn-default.btn-file
							span.fileinput-new Add Photo
							span.fileinput-exists Change
							input(type='file' name='...')
						br
						a.btn.btn-danger.btn-round.fileinput-exists(href='#pablo' data-dismiss='fileinput')
							i.now-ui-icons.ui-1_simple-remove
							|  Remove
